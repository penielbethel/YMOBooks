{
  "builds": [
    { "src": "server/index.js", "use": "@vercel/node" }
  ],
  "rewrites": [
    { "source": "/api/:path*", "destination": "/server/index.js" },
    { "source": "/files/:path*", "destination": "/server/index.js" },
    { "source": "/(terms|privacy|contact|account-deletion)", "destination": "/server/public/$1.html" },
    { "source": "/", "destination": "/server/public/index.html" },
    { "source": "/:path*", "destination": "/server/public/index.html" }
  ]
}